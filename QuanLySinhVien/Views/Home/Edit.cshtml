@model QuanLySinhVien.Models.DiemSV

@{
    ViewBag.Title = "Edit";
}


<div class="container">
    <div class="row pt-4">
        @*<div class="col-md-1"></div>*@
        <div class="col-md-3">
            <img src="~/Content/logo.png" class="w-25" />
            <div class="list-group">
                <a href="/Home/Index" class="list-group-item  list-group-item-action list-group-item-light">List</a>
                <a href="/Home/Create" class="list-group-item  list-group-item-action list-group-item-light">New</a>
                <a href="#" class="list-group-item  list-group-item-action list-group-item-dark">Edit</a>
                <a href="/Home/Search" class="list-group-item  list-group-item-action list-group-item-light">Search</a>
            </div>
        </div>
        <div class="col-md-9">
            <h3>Student score management</h3>
            <h4>Edit</h4>
            <div class="container row">
                <div class="col-md-5 py-3">
                    <form method="post" action="Edit">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)
                        <div class="form-group">
                            <label>Mã sinh viên</label>
                            <input class="form-control form-control-sm" name="MaSV" value="@Model.MaSV" />
                            @Html.ValidationMessageFor(model => model.MaSV, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label>Điểm kỳ 1</label>
                            <input class="form-control form-control-sm" name="DiemKy1" value="@Model.DiemKy1" />
                            @Html.ValidationMessageFor(model => model.DiemKy1, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group ">
                            <label>Điểm kỳ 2</label>
                            <input class="form-control form-control-sm" name="DiemKy2" value="@Model.DiemKy2" />
                            @Html.ValidationMessageFor(model => model.DiemKy2, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group ">
                            <label>Kết quả</label>
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input type="radio" class="form-check-input" name="KetQua" value="true" checked>Đỗ
                                </label>
                            </div>
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input type="radio" class="form-check-input" name="KetQua" value="false">Trượt
                                </label>
                            </div>
                            @Html.ValidationMessageFor(model => model.KetQua, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <button class="btn btn-sm btn-success" type="submit">Submit</button>
                            <button class="btn btn-sm btn-danger" type="reset">Clear</button>
                        </div>
                    </form>
                </div>


            </div>

        </div>
    </div>

</div>